<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relative_layout"
    android:background="#fff">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/company_textName"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#db4733"
                android:background="#ffba03"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#000"
                android:layout_below="@+id/company_textName"
                android:id="@+id/strip_company"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/company_details_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_name"
        />

</RelativeLayout>

